---
import XLogoBlackImage from "../../../imgs/x-logo-black.png";
import XLogoWhiteImage from "../../../imgs/x-logo-white.png";
import ArrowUpRightFromSquareIcon from "../../icons/arrow-up-right-from-square.svg";
import ArrowUpRightFromSquareWhiteIcon from "../../icons/arrow-up-right-from-square-white.svg";


interface Props {
  mobile: boolean;
}
const { mobile } = Astro.props;
---

<style>
  .navitems {
    font-family: "Futura", "Jost", sans-serif;
  }

  ul {
    display: flex;
    align-items: center;
    gap: 32px;
    list-style-type: none;
    font-size: 16px;
  }
  @media screen and (width <= 720px) {
    nav ul {
      gap: 12px;
    }
  }

  a {
    color: #000;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }
</style>

<ul class="navitems">
  <li>
    <a href={`${import.meta.env.BASE_URL}/talks`}>Talks</a>
  </li>
  <li>
    <a href={`${import.meta.env.BASE_URL}/schedule/`}>Schedule</a>
  </li>
  <li>
    <a href={`${import.meta.env.BASE_URL}/news/`}>News</a>
  </li>
  <li>
    <a href={`${import.meta.env.BASE_URL}/sponsors/`}>Sponsors</a>
  </li>
  <li>
    <a href={`${import.meta.env.BASE_URL}/policy/`}>Policy</a>
  </li>
  <li>
    <a href={`${import.meta.env.BASE_URL}/staff/`}>Staff</a>
  </li>
  <li class="access">
    <a href="https://salvia.hall-info.jp/about/#access" target="_blank">
      Access
      <img src={
        mobile ? ArrowUpRightFromSquareWhiteIcon.src : ArrowUpRightFromSquareIcon.src
      } height={
        mobile ? 24 : 16
      } />
    </a>
  </li>
  <li>
    <a href="https://x.com/tokyork12" target="_blank">
      <img src={
        mobile ? XLogoWhiteImage.src : XLogoBlackImage.src
      } alt="X logo" width="24" height="24" />
    </a>
  </li>
</ul>
