---
import Head from "./Head.astro";
import Header from "./Header.astro";
import Footer from "./Footer.astro";

const { title, twitter_card } = Astro.props;
---

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Jost:wght@300..700&family=Noto+Sans+JP:wght@300..700&display=swap');

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  a {
    color: #000;
  }

  html, body {
    height: 100%;
    width: 100%;
    font-family: "Hiragino Kaku Gothic Pro", "Noto Sans JP", sans-serif;
    font-weight: 400;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  main {
  }
  main {
    flex: 1;

    display: flex;
    flex-direction: column;
    padding: 24px;
    gap: 24px;
    background-color: #fcece8;
  }
  @media screen and (width <= 960px) {
    main {
      padding: 24px 0;
    }
  }
</style>

<html lang="ja">
  <head>
    <Head title={title} twitter_card={twitter_card} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
