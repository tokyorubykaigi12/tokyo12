---
import Logo from "./Header/Logo.astro"
import Nav from "./Header/Nav.astro"
import Hamburger from "./Header/Hamburger.astro"
---

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: max(100%, 100% - 112px);
    margin-left: auto;
    margin-right: auto;
    padding: 24px 56px;
  }
  @media screen and (width <= 1024px) {
    header {
      padding: 24px;
      padding-left: 16px;
      padding-right: 24px;
    }
  }
  @media screen and (width <= 480px) {
    header {
      padding: 16px;
      width: 100%;
    }
  }
</style>

<header>
  <Logo />
  <Nav />
  <Hamburger />
</header>
