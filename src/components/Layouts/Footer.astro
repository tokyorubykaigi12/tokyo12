---
import XLogoWhiteImage from "../../imgs/x-logo-white.png";
import ArrowUpRightFromSquareIcon from "../icons/arrow-up-right-from-square-white.svg";
---

<style>
  footer {
    width: 100%;
    padding: 48px 56px 24px;
    background: #dd451d;
    color: #fff;
  }

  footer nav {
    font-family: "Futura", "Jost", sans-serif;
    margin-left: auto;
  }

  footer nav ul {
    display: flex;
    align-items: center;
    font-size: 16px;
    list-style-type: none;

    justify-content: flex-end;
    gap: 32px;
  }
  @media screen and (width <= 960px) {
    footer nav ul {
      justify-content: center;
      gap: 12px;
    }
  }
  @media screen and (width <= 700px) {
    footer nav ul {
      flex-direction: column;
      align-items: center;
    }
  }

  footer nav ul a {
    color: #fff;
    text-decoration: none;
  }

  footer .copyright {
    width: 100%;
    padding-top: 48px;
    text-align: center;
  }
</style>

<footer>
  <nav>
    <ul>
      <li>
        <a href={`${import.meta.env.BASE_URL}/schedule/`}>Schedule</a>
      </li>
      <li>
        <a href={`${import.meta.env.BASE_URL}/news/`}>News</a>
      </li>
      <li>
        <a href={`${import.meta.env.BASE_URL}/policy/`}>Policy</a>
      </li>
      <li>
        <a href={`${import.meta.env.BASE_URL}/staff/`}>Staff</a>
      </li>
      <li class="access">
        <a href="https://salvia.hall-info.jp/about/#access" target="_blank">
          Access
          <img src={ArrowUpRightFromSquareIcon.src} height="16" />
        </a>
      </li>
      <li style="padding-top:12px;">
        <a href="https://x.com/tokyork12" target="_blank">
          <img src={XLogoWhiteImage.src} alt="X logo" width="24" height="24" />
        </a>
      </li>
    </ul>
  </nav>
  <div class="copyright">&#169; Tokyo RubyKaigi 12 Team.</div>
</footer>
