---
const TitoLink = "https://ti.to/tokyorubykaigi12/conference";
---

<style>
  .buy-a-ticket {
    display: inline-block;
    border-radius: 4px;
    padding: 16px 32px;
    cursor: pointer;

    font-family: "Futura", "Jost", sans-serif;
    font-weight: 500;
    font-size: 24px;
    line-height: 36px;
    text-decoration: none;

    border: 0px;
    background: #fff;
    color: #dd451d;
  }
  @media screen and (width <= 720px) {
    .buy-a-ticket {
      font-size: 16px;
      line-height: 22px;
    }
    
  }
</style>

<div class="actions" style="margin-bottom: 32px;">
  <a class="buy-a-ticket" href={TitoLink}>Get your ticket</a>
</div>
