---
import PrimaryLogoWhiteImage from "../../imgs/primary_logo_white.png";
import TriImage from "../../imgs/tri.png";
import TicketButtonBefore from "./TicketButtonBefore.astro";
import TicketButtonSelling from "./TicketButtonSelling.astro";

function isTicketOpen(): boolean {
  const ticketOpenDate = new Date("2024-10-17T14:00:00+09:00");

  const date = new Date();
  let gmtDate = new Date(date.toUTCString().replace("GMT", ""));
  const hours = gmtDate.getHours();
  gmtDate.setHours(hours + 9); // GMT+9

  return gmtDate >= ticketOpenDate;
}
---

<style>
  .hero {
    width: 100%;
  }

  .datetime {
    font-weight: 500;
  }

  .location {
    font-weight: 600;
  }

  .hero .hero-inner {
    width: min(1132px, 100% - 40px);
    margin-left: auto;
    margin-right: auto;
    padding: 32px 98px;
    border-radius: 32px 32px 0 0;
    background: #dd451d;
    color: #fff;
    text-align: center;
  }
  @media screen and (480px < width <= 700px) {
    .hero .hero-inner {
      padding: 32px 48px;
    }
  }
  @media screen and (width <= 480px) {
    .hero .hero-inner {
      padding: 32px 20px;
    }
  }

  .hero .hero-inner .primary-logo {
    width: 80%;
    height: auto;
  }
  @media screen and (width <= 480px) {
    .hero .hero-inner .primary-logo {
      width: 100%;
      height: auto;
    }
  }

  .hero .hero-inner .datetime {
    font-size: 36px;
    line-height: 48px;
    font-weight: 500;
  }
  @media screen and (width <= 480px) {
    .hero .hero-inner .datetime {
      font-size: 20px;
      line-height: 26px;
    }
  }

  .hero .hero-inner .location {
    a {
      font-size: 26px;
      line-height: 36px;
      font-weight: 400;
      color: #fff;
      text-decoration: none;
    }
  }
  @media screen and (width <= 480px) {
    .hero .hero-inner .location {
      a {
        font-size: 16px;
        line-height: 24px;
      }
    }
  }

  .hero .hero-inner .organizing-team {
    margin-top: 10px;
    a {
      font-size: 16px;
      line-height: 24px;
      font-weight: 300;
      color: #fff;
      text-decoration: none;
    }
  }
  @media screen and (width <= 480px) {
    .hero .hero-inner .organizing-team {
      a {
        font-size: 12px;
        line-height: 18px;
      }
    }
  }
</style>

<div class="hero">
  <div class="hero-inner">
    <h1>
      <img
        src={PrimaryLogoWhiteImage.src}
        alt="Tokyo RubyKaigi 12"
        class="primary-logo"
      />
    </h1>

    <div style="margin-bottom: 16px;">
      <div class="datetime">2025-01-18 (Sat)</div>
      <div class="location">
        <a
          href="https://salvia.hall-info.jp/about/#access"
          target="_blank"
          rel="noopener noreferrer"
        >
          Tsurumi Cultural Centre "Salvia Hall"
        </a>
      </div>
      <div class="organizing-team">
        <a href={`${import.meta.env.BASE_URL}/staff/`}>
          Organized by Tokyo RubyKaigi 12 Team
        </a>
      </div>
    </div>

    {isTicketOpen() ? <TicketButtonSelling /> : <TicketButtonBefore />}

    <div>
      <img src={TriImage.src} alt="" />
    </div>
  </div>
</div>
