---
type Company = {
  logoImageSrc: string;
  name: string;
  link: string;
  description: string;
};

interface Props {
  grade: "Ruby" | "Gold" | "Silver";
  company: Company;
}

const { grade, company } = Astro.props;

const RubyLargeSize = "320px";
const RubySmallSize = "240px";
const GoldLargeSize = "240px";
const GoldSmallSize = "200px";
const SilverLargeSize = "160px";
const SilverSmallSize = "160px";
---

<div class:list={["logo", grade]}>
  <img src={company.logoImageSrc} alt={company.name} />
</div>

<style
  define:vars={{
    RubyLargeSize,
    RubySmallSize,
    GoldLargeSize,
    GoldSmallSize,
    SilverLargeSize,
    SilverSmallSize,
  }}
>
  .logo {
    background-color: #fff;
    border-radius: 12px;
    border: 1px solid #D9D9D9;

    img {
      width: 100%;
      height: 100%;
      object-fit: contain;
      border-radius: 12px;
    }
  }

  .Ruby {
    width: var(--RubyLargeSize);
    height: var(--RubyLargeSize);
  }
  @media screen and (width <= 960px) {
    .Ruby {
      width: var(--RubySmallSize);
      height: var(--RubySmallSize);
    }
  }
  @media screen and (width <= 420px) {
    .Ruby {
      width: var(--GoldSmallSize);
      height: var(--GoldSmallSize);
    }
  }

  .Gold {
    width: var(--GoldLargeSize);
    height: var(--GoldLargeSize);
  }
  @media screen and (width <= 960px) {
    .Gold {
      width: var(--GoldSmallSize);
      height: var(--GoldSmallSize);
    }
  }

  .Silver {
    width: var(--SilverLargeSize);
    height: var(--SilverLargeSize);
  }
  @media screen and (width <= 960px) {
    .Silver {
      width: var(--SilverSmallSize);
      height: var(--SilverSmallSize);
    }
  }
</style>
