---
import MiniPanel from "../Layouts/MiniPanel.astro";
const { date } = Astro.props;
---

<style>
  .news {
    margin-bottom: 24px;
  }

  .date {
    font-family: "Futura", "Jost", sans-serif;
    font-weight: 500;
    font-size: 16px;
    line-height: 21.25px;
  }

  .body {
    font-size: 16px;
    line-height: 30px;

    overflow-wrap: break-word;

    list-style-position: inside;
  }
</style>

<div class="news">
  <MiniPanel>
    <div class="date">{date}</div>
    <div class="body"><slot /></div>
  </MiniPanel>
</div>
