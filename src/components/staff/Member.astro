---
import MiniPanel from "../Layouts/MiniPanel.astro";
import GravatarImage from "../GravatarImage.astro";

import GitHubMarkImage from "../../imgs/github-mark.png";
import XLogoBlackImage from "../../imgs/x-logo-black.png";

interface Props {
  name: string;
  md5Email: string;
  githubID: string;
  xID: string;
}
const { name, md5Email, githubID, xID } = Astro.props;

const iconSize = 400;
---

<style>
  .icon {
    display: flex;
    justify-content: center;
    margin-bottom: 32px;

    img {
      border-radius: 12px;
      border: solid #D9D9D9 1px;
      width: 200px;
    }
    @media screen and (width <= 960px) {
      img {
        width: 160px;
      }
    }
  }

  h3 {
    margin-bottom: 10px;
    font-size: 20px;
    font-weight: 500;
    line-height: 27px;
  }

  .social {
    line-height: 24px;
    display: flex;
    flex-wrap: wrap;
    gap: 0 24px;
  }

  .social .github,
  .x {
    display: flex;
    align-items: center;
  }

  .social .github img {
    width: 30px;
    height: 30px;
    margin: 0 8px 0 0;
  }
  @media screen and (width <= 480px) {
    .social .github img {
      width: 18px;
      height: 18px;
    }
  }

  .social .x img {
    width: 24px;
    height: 24px;
    margin: 0 8px 0 0;
  }
  @media screen and (width <= 480px) {
    .social .x img {
      width: 16px;
      height: 16px;
    }
  }

  .social a {
    text-decoration: none;
    font-size: 20px;
    vertical-align: top;
  }
  @media screen and (width <= 480px) {
    .social a {
      font-size: 16px;
    }
  }
</style>

<MiniPanel>
  <div class="icon">
    <GravatarImage md5Email={md5Email} size={400} alt={name} />
  </div>
  <h3>{name}</h3>
  <div class="social">
    <div class="github">
      <img src={GitHubMarkImage.src} /><a href=`https://github.com/${githubID}`>
        @{githubID}
      </a>
    </div>
    <div class="x">
      <img src={XLogoBlackImage.src} /><a href=`https://x.com/${xID}`>
        @{xID}
      </a>
    </div>
  </div>
</MiniPanel>
